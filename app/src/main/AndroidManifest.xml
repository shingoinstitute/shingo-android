<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.shingo.shingoapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="7b270db836d504381374de50e898a9c6867f3861" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ModelActivity"
            android:label="Shingo Model" />
        <activity
            android:name=".ui.events.EventListActivity"
            android:label="@string/title_activity_events_list"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.events.EventDetailActivity"
            android:label="@string/title_activity_event_detail"
            android:parentActivityName=".ui.events.EventListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.shingo.shingoapp.ui.events.EventListActivity" />
        </activity>
    </application>

</manifest>